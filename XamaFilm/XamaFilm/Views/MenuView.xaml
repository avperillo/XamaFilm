<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamaFilm.Views.MenuView"
             Title="Master">

    <StackLayout>
        <Grid BackgroundColor="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Grid.Column="0" Source="XamaFilm.png"/>
            <Label Grid.Row="1" Grid.Column="0"  Text="XamaFilm" HorizontalTextAlignment="Center" FontSize="Large"/>

        </Grid>

        <Grid BackgroundColor="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0" Grid.Column="0" Source="movie_menu.png"/>
            <Label Grid.Row="0" Grid.Column="1"  Text="MOVIES" FontSize="Medium"/>

            <Image Grid.Row="1" Grid.Column="0" Source="serie_menu.png"/>
            <Label Grid.Row="1" Grid.Column="1"  Text="SERIES" FontSize="Medium"/>

            <Image Grid.Row="2" Grid.Column="0" Source="watchlist_menu.png"/>
            <Label Grid.Row="2" Grid.Column="1"  Text="WATCHLIST" FontSize="Medium"/>

            <Image Grid.Row="3" Grid.Column="0" Source="favorites_menu.png"/>
            <Label Grid.Row="3" Grid.Column="1"  Text="FAVORITES" FontSize="Medium"/>

            <Image Grid.Row="4" Grid.Column="0" Source="settings_menu.png"/>
            <Label Grid.Row="4" Grid.Column="1"  Text="SETTINGS" FontSize="Medium"/>

            <Image Grid.Row="5" Grid.Column="0" Source="logout_menu.png"/>
            <Label Grid.Row="5" Grid.Column="1"  Text="LOGUOT" FontSize="Medium"/>
            

        </Grid>
        
    </StackLayout>
    
